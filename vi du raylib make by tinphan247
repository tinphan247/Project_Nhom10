#include "raylib.h"

int main(){
    const int screenWidth = 1280;
    const int screenHeight = 720;
    InitWindow(screenWidth,screenHeight,"HE THONG DANG NHAP");

    SetTargetFPS(60);

    while(!WindowShouldClose()){
        BeginDrawing();
            ClearBackground(RAYWHITE);
            DrawText("LOGIN",screenWidth*6.5/16,screenHeight*2.5/9 - 100,80,BLACK);
            DrawText("ID:",screenWidth*4.5/16 + 150,screenHeight*4/9,40,BLACK);
            DrawRectangle(screenWidth*8.5/16 - 100,screenHeight*4/9,280,40,GRAY);
            DrawText("Password:",screenWidth*4.5/16,screenHeight*5.5/9,40,BLACK);
            DrawRectangle(screenWidth*8.5/16 - 100,screenHeight*5.5/9,280,40,GRAY);

        EndDrawing();
    }
    CloseWindow();
    return 0;

}
